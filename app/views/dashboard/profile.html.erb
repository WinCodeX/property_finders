<div class="property-main-photo" style="background-image: url('<%= cover_image_url @account %>')">
  <div class="photo-overlay">

  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col">
          <p class="h4 mb-2"><%= @account.full_name %></p>
          <p class="mb-2"><%= @account.company %></p>
          <p class="text-muted">Registered for <%= time_ago_in_words @account.created_at %></p>
        </div>
      </div>
      <div class="row border-top mt-5 pt-4">
        <div class="col">
            <p class="h5">Description</p>
            
            <!-- wrapper -->
            <div id="prop-details" class="">
              <%= simple_format @account.details %>
            </div>
            
            <button class="btn btn-outline-info mt-3" id="details">Show More</button>
          </div> 
        </div>  
      </div>
      <div class="col-md-4">
          <%= render "properties/profile_contact_details", agent: @account %>
          
          <div class="col-md-10 offset-md-1 text-center">
            <div class="row mt-sm-3 bg-light p-3">
              <div class="col-6">
                  <!-- Reflect The How Ive Define To The Model Scope -->
                <p class="lead"><%= @properties_sold %><br/>Sold<p>
              </div>
              <div class="col-6">
                <p class="lead"><%= @properties_for_sale %><br/>For Sale<p>
               </div>
              <div class="col-6">
                <p class="lead"><%= @properties_leased %><br/>Leased<p><br/>
              </div>
              <div class="col-6">
                <p class="lead"><%= @properties_for_rent %><br/>For Rent<p><br/>
              </div>
            </div>
          </div>
        </div>  
     </div>
    </div>
  </div>
</div>

<section id="mt-5 mb-5">
<div class="container">
    <div class="row">
